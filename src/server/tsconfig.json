{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "../../dist/server",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "rootDir": "../../src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "./utils/server-bridge.ts",
    "./mcp/index.ts",
    "./gateway/index.ts",
    "./augment/vscode-extension.ts"
  ]
}
