!dist/extension.js
!dist/extension.js.map
!dist/commands.js
!dist/commands.js.map
!dist/globals.js
!dist/globals.js.map

# Include server code
!dist/src/server/**/*.js
!dist/src/server/**/*.js.map

# Include Python files
!dist/python/**/*.py
!**/*.py

